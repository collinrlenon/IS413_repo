@model Book


<div>
    <!-- Summary data about each of our books -->
    <div>
        <tr>
            <td>@Model.BookID</td>
            <td>@Model.Title</td>
            <td>@Model.AuthorFirstName</td>
            <td>@Model.AuthorMiddleName</td>
            <td>@Model.AuthorLastName</td>
            <td>@Model.Publisher</td>
            <td>@Model.ISBN</td>
            <td>@Model.Classification</td>
            <td>@Model.Category</td>
            <td>$@Model.Price </td>
            <td>@Model.Pages </td>
            <td>
                <form id="@Model.BookID" asp-page="/Cart" method="post">
                    <input type="hidden" asp-for="BookID" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <span class="card-text p-1">
                        <!--@Model.Title-->
                        <button type="submit" class="btn-success btn-sm pull-right" style="float:unset">
                            Add to Cart
                        </button>
                    </span>
                </form>
            </td>
        </tr>
    </div>
</div>